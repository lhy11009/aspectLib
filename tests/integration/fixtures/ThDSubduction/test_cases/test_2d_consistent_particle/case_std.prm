        set Function constants = Do=2.8900e+06, xm=7.3830e+06, Wp=1.0000e+06, Depth=150e3, dOvSide=6.0000e+05
        set Function expression = (z > Do - Depth) && (x > (xm - dOvSide)) && (y <= Wp)? 1.0: 0.0
